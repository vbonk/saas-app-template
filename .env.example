# ===================================================================
# SAAS APP TEMPLATE - ENVIRONMENT VARIABLES
# Copy this file to .env.local and fill in your actual values
# ===================================================================

# ===================================================================
# CORE APPLICATION
# ===================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="SaaS App Template"
NODE_ENV=development

# ===================================================================
# DATABASE
# ===================================================================
# PostgreSQL connection string (Railway, Supabase, etc.)
DATABASE_URL="postgresql://username:password@hostname:port/database"

# ===================================================================
# AUTHENTICATION (CLERK)
# ===================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===================================================================
# PAYMENTS (STRIPE)
# ===================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ===================================================================
# EMAIL (RESEND)
# ===================================================================
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===================================================================
# AI SERVICES
# ===================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# AI Usage Limits
AI_DAILY_TOKEN_LIMIT_FREE=10000
AI_DAILY_TOKEN_LIMIT_PRO=100000
AI_DAILY_REQUEST_LIMIT_FREE=50
AI_DAILY_REQUEST_LIMIT_PRO=500

# ===================================================================
# BACKGROUND JOBS & QUEUES
# ===================================================================
# Redis for job queues (Railway or Upstash)
REDIS_URL=redis://username:password@hostname:port
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Queue Configuration
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_MS=30000
BULL_DASHBOARD_USERNAME=admin
BULL_DASHBOARD_PASSWORD=your_secure_password

# Queue Monitoring
ENABLE_JOB_METRICS=true
ENABLE_QUEUE_DASHBOARD=true

# ===================================================================
# MONITORING & ANALYTICS
# ===================================================================
# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ===================================================================
# DEPLOYMENT & INFRASTRUCTURE
# ===================================================================
# Railway (if using Railway deployment)
RAILWAY_PROJECT_ID=your_railway_project_id_here
RAILWAY_SERVICE_ID=your_railway_service_id_here

# Redis (for caching)
REDIS_URL=redis://username:password@hostname:port

# ===================================================================
# FEATURES FLAGS & CONFIGURATION
# ===================================================================
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_AI_FEATURES=false
MAX_FILE_UPLOAD_SIZE=5242880  # 5MB in bytes

# ===================================================================
# WEBHOOKS & INTEGRATIONS
# ===================================================================
WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# ===================================================================
# SECURITY
# ===================================================================
NEXTAUTH_SECRET=your_nextauth_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===================================================================
# DEVELOPMENT ONLY
# ===================================================================
# These should not be set in production
DEBUG=false
VERBOSE_LOGGING=false
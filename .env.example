# Cloudflare R2 (Optional)
CLOUDFLARE_R2_ACCESS_KEY_ID="your_r2_access_key_here"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your_r2_secret_key_here"
CLOUDFLARE_R2_BUCKET_NAME="your_bucket_name"
CLOUDFLARE_R2_ENDPOINT="https://your_account_id.r2.cloudflarestorage.com"

# Railway Deployment
RAILWAY_TOKEN="your_railway_token_here"

# GitHub Integration
GITHUB_TOKEN="ghp_your_github_token_here"

# API Keys for External Services
OPENAI_API_KEY="sk-your_openai_api_key_here"
ANTHROPIC_API_KEY="sk-ant-your_anthropic_api_key_here"

# Documentation Generation
REPOSITORY_NAME="your_username/your_repo_name"
STACK_CONFIG="{\"frontend\":\"Next.js 15 + TypeScript + Tailwind CSS\",\"backend\":\"Next.js API Routes\",\"database\":\"PostgreSQL + Redis\",\"hosting\":\"Railway\"}"

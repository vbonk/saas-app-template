{
  "name": "saas-app-template",
  "version": "1.0.0",
  "description": "SaaS application template with automated documentation generation",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:auth": "playwright test --project=auth-tests",
    "test:security": "npm audit && npm run security:validate && playwright test --project=security-tests",
    "test:workflows": "playwright test --project=workflow-tests",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:all": "npm run test && npm run test:e2e && npm run security:validate",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:readme": "node scripts/generate-docs.js --type=readme",
    "docs:architecture": "node scripts/generate-docs.js --type=architecture",
    "docs:api": "node scripts/generate-docs.js --type=api",
    "docs:deployment": "node scripts/generate-docs.js --type=deployment",
    "render-diagrams": "find docs/diagrams -name '*.puml' -exec sh -c 'plantuml -tpng \"$1\"' _ {} \\;",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "queue:dev": "node scripts/queue-worker.js",
    "queue:dashboard": "node scripts/queue-dashboard.js",
    "prepare": "husky install",
    "security:validate": "./scripts/security-validation.sh",
    "security:lint": "eslint --config .eslintrc.security.js \"src/**/*.{ts,tsx,js,jsx}\"",
    "test:security": "npm audit && npm run security:validate"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.29.0",
    "@prisma/client": "^5.7.0",
    "@radix-ui/react-slot": "^1.0.0",
    "@stripe/stripe-js": "^2.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "next": "^15.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^2.1.0",
    "stripe": "^14.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^15.0.0",
    "markdownlint-cli": "^0.37.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },
  "keywords": [
    "nextjs",
    "saas",
    "template",
    "documentation",
    "automation",
    "railway",
    "clerk",
    "stripe"
  ],
  "author": "Your Name",
  "license": "MIT"
}
